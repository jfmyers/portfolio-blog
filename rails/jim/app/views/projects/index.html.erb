<script type="text/javascript"> 
	var page = 'projects';
	mixpanel.track(page);
</script>
<div class="content-container">
<% if @projects.count > 0 %>
    <% @projects.each do |project| %>
        <div class="project">
			<div class="col1">
				<p>>_</p>
			</div>
			<div class="col2">
				<p class="title">
					<%= link_to project.title, project.link, target:"_blank" %>
				</p>
				<div class="post-html">
					<%= project.descr.html_safe %>
				</div>
			</div>
		</div>
    <% end %>
<% else %>
    <div>No projects are available.</div>			 
<% end %>
</div>